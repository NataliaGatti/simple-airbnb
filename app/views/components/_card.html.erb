<div class="mx-5"> 
  <div class="d-flex flex-wrap ">
    <% flats.each do |flat| %>
      <div class="d-inline">
        <div class="border p-3 mr-3 mb-0 bg-light" style="width:390px">
        <%= image_tag "#{flat.photo}", class:"img-house-index" %>
          <h2><%= flat.name %></h2>
          <p><%= flat.address %></p>
          <div class="d-flex">
            <p class="p-2"><i class="fas fa-user-friends"></i>    <%= flat.number_of_guests %></p>
            <p class="p-2"><i class="fas fa-euro-sign"></i>   <%= flat.price_per_night %></p>
          </div>
        </div>
        <div class="d-flex mt-0 mr-3 mb-3 p-3 bg-white border">
          <%= link_to "More info", flat_path(flat), class:"pr-3"  %>
          <%= link_to "Edit", edit_flat_path(flat), class:"pr-3 text-warning fw-bold fs-2"  %>
          <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Are you sure to remove this flat?" }, class:"text-danger fw-bold fs-2"  %>
        </div>
    </div>
  <% end %>
  </div>
</div>